<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.rcmapps.safetycharger"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activites.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.SettingsActivity"
            android:theme="@style/SettingsScreenTheme">
        </activity>

        <service android:name=".services.SafetyAlarmService"/>

        <receiver android:name=".services.PowerConnectionReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
                <action android:name="android.intent.action.ACTION_POWER_DISCONNECTED"/>
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2bce9e33ad17e041532bbcf202eb60404eb6f089"/>

        <activity android:name=".activites.InstructionActivity">
        </activity>
        <activity android:name=".activites.AboutActivity">
        </activity>
    </application>

</manifest>